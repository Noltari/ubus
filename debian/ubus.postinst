#!/bin/sh
set -e

case "$1" in
    configure)
        if ! getent group ubus >/dev/null; then
            addgroup --system ubus
        fi
        ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0
